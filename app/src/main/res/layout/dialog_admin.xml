<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="930px"
    android:layout_height="620px"
    android:background="@drawable/btn_round_whitegray"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/admin_btn_voluntary"
        android:orientation="vertical"
        android:layout_width="310px"
        android:layout_height="match_parent">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <ImageView
            android:src="@drawable/ic_perm_contact_calendar_black_24dp"
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:text="봉사활동 승인"
            android:gravity="center"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/admin_btn_voluntary_add"
        android:orientation="vertical"
        android:layout_width="310px"
        android:layout_height="match_parent">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <ImageView
            android:src="@drawable/ic_add_to_queue_black_24dp"
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:text="봉사활동 추가"
            android:gravity="center"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/admin_btn_business_add"
        android:orientation="vertical"
        android:layout_width="310px"
        android:layout_height="match_parent">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <ImageView
            android:src="@drawable/ic_perm_contact_calendar_black_24dp"
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:text="봉사사업 추가"
            android:gravity="center"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>



</LinearLayout>